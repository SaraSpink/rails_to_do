<h1>Edit Task</h1>

<% if @task.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render('layouts/errors', :object => @task) %>

<%= form_for [@list, @task] do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.label "Task Done" %>
  <%= f.check_box :done %> <br />
  <p><%= f.submit %></p>



<% end %>
